<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="todo_task_form_view" model="ir.ui.view">
			<field name="name">todo_task.todo_task.form</field>
			<field name="model">todo.task</field>
			<field name="arch" type="xml">
				<form string="ModelTitle">
					<sheet>
						<header>
							<field name="status" widget="statusbar" options="{'clickable':0}"/>
						</header>
						<div class="oe_title">
							<label for="task_name"/>
							<h1>
								<field name="task_name" placeholder="Task Name"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="assigned_to"/>
								<field name="late_boolean" widget="late_boolean"/>
								<field name="active" invisible="1"/>
							</group>
							<group>
								<field name="due_date"/>
								<field name="expire_date"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="todo_task_tree_view" model="ir.ui.view">
			<field name="name">todo_task.tree</field>
			<field name="model">todo.task</field>
			<field name="arch" type="xml">
				<tree string="ModelTitle">
					<field name="task_name"/>
					<field name="assigned_to"/>
					<field name="due_date"/>
					<field name="status" widget="badge"/>
				</tree>
			</field>
		</record>

		<record id="todo_task_search_view" model="ir.ui.view">
			<field name="name">todo_task.search</field>
			<field name="model">todo.task</field>
			<field name="arch" type="xml">
				<search string="ModelTitle">

					<group expand="1" string="Group By">
						<filter string="Assgined to" name="name" domain="[]"
						        context="{'group_by':'task_name'}"/>
						<filter string="Status" name="name" domain="[]"
						        context="{'group_by':'status'}"/>
					</group>
				</search>
			</field>
		</record>

		<record id="todo_task_act_window" model="ir.actions.act_window">
			<field name="name">TodoTask</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">todo.task</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					There is no examples click here to add new ModelTitle.
				</p>
			</field>
		</record>
		<record id="todo_task-closed_server_action" model="ir.actions.server">
			<field name="name">closed</field>
			<field name="model_id" ref="model_todo_task"/>
			<field name="binding_model_id" ref="model_todo_task"/>
			<field name="state">code</field>
			<field name="code">
				action = records.action_closed()
			</field>
		</record>

		<record id="expire_date_automation_action" model="ir.cron">
			<field name="name">Car: ren expire date</field>
			<field name="model_id" ref="model_todo_task"/>
			<field name="state">code</field>
			<field name="code">
				model.automated_expire_date()
			</field>
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
		</record>

		<menuitem name="todo task" id="todo_task_menu" parent="app_one" action="todo_task_act_window"/>

	</data>
</odoo>