<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="carRent_form_view" model="ir.ui.view">
			<field name="name">car.rent.form</field>
			<field name="model">car.rent</field>
			<field name="arch" type="xml">
				<form string="ModelTitle">
					<sheet>
						<header>
							<button name="create_car" class="btn-primary" type="object" string="create car"/>
							<button name="action_draft" type="object" string="Rest To Draft" class="btn-primary"
							invisible="state == 'draft'"
							/>
							<button name="action_waiting" type="object" string="Waiting" class="btn-secondary"
							invisible="state != 'draft'"
							/>
							<button name="action_done" type="object" string="Rent" class="btn-success"
							invisible="state == 'done'"
							/>
							<field name="state" widget="statusbar" options="{'clickable':1}"/>
						</header>
						<div class="oe_title">
							<label for="name"/>
							<h1>
								<field name="name"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="address"/>
								<field name="time"/>
							</group>
							<group>
								<field name="number_of_persons"/>
							</group>
						</group>
						<notebook>
							<page string="cars">
								<field name="car_line_ids">
									<tree editable="bottom">
										<field name="name"/>
										<field name="price"/>
										<field name="model"/>
										<field name="number_of_places"/>
										<field name="car_driver"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record id="carRent_tree_view" model="ir.ui.view">
			<field name="name">carRent.tree</field>
			<field name="model">car.rent</field>
			<field name="arch" type="xml">
				<tree string="ModelTitle">
					<field name="name"/>
					<field name="address"/>
					<field name="number_of_persons"/>
					<field name="state" widget="badge"/>
				</tree>
			</field>
		</record>

		<record id="carRent_search_view" model="ir.ui.view">
			<field name="name">carRent.search</field>
			<field name="model">car.rent</field>
			<field name="arch" type="xml">
				<search string="ModelTitle">
					<group expand="1" string="Group By">
						<filter string="Name" name="name" domain="[]"
						        context="{'group_by':'name'}"/>
					</group>
				</search>
			</field>
		</record>

		<record id="carRent_act_window" model="ir.actions.act_window">
			<field name="name">car rent</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">car.rent</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					There is no examples click here to add new ModelTitle.
				</p>
			</field>
		</record>

		<menuitem name="car rent" id="carRent_menu" parent="app_one" action="carRent_act_window"/>

	</data>
</odoo>