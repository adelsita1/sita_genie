<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="driver_form_view" model="ir.ui.view">
			<field name="name">driver.form</field>
			<field name="model">driver</field>
			<field name="arch" type="xml">
				<form string="ModelTitle">
					<sheet>
						<div class="oe_title">
							<label for="name"/>
							<h1>
								<field name="name" placeholder="name"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="age"/>
							</group>
							<group>
								<field name="license"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="driver_tree_view" model="ir.ui.view">
			<field name="name">driver.tree</field>
			<field name="model">driver</field>
			<field name="arch" type="xml">
				<tree string="ModelTitle">
					<field name="name"/>
					<field name="age"/>
				</tree>
			</field>
		</record>

		<record id="driver_search_view" model="ir.ui.view">
			<field name="name">driver.search</field>
			<field name="model">driver</field>
			<field name="arch" type="xml">
				<search string="ModelTitle">
					<group expand="1" string="Group By">
						<filter string="name" name="name" domain="[]"
						        context="{'group_by':'name'}"/>
					</group>
				</search>
			</field>
		</record>

		<record id="driver_act_window" model="ir.actions.act_window">
			<field name="name">driver</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">driver</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					There is no examples click here to add new ModelTitle.
				</p>
			</field>
		</record>

		<menuitem name="drivers" id="driver_menu" parent="app_one" action="driver_act_window"/>

	</data>
</odoo>